<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:stretchColumns="0,3"
    android:baselineAligned="false"
    android:weightSum="1">

    <TableRow android:layout_marginTop="20px">
        <TextView />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="licence_num："
            android:textSize="48px" />

        <EditText
            android:id="@+id/licencenum_signup_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:minWidth="440px"
            android:textSize="48px" />
        <TextView />
    </TableRow>

    <TableRow
        android:layout_height="34dp"
        android:layout_marginTop="20px">

        <TextView />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="licence_state："
            android:textSize="48px" />

        <EditText
            android:id="@+id/licencestate_signup_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:minWidth="440px"
            android:textSize="48px" />

        <TextView />
    </TableRow>

    <TableRow android:layout_marginTop="20px">
        <TextView />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="make："
            android:textSize="48px" />

        <EditText
            android:id="@+id/make_signup_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="440px"
            android:textSize="48px"
            android:inputType="text"/>
        <TextView />
    </TableRow>

    <TableRow android:layout_marginTop="20px">
        <TextView />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="model："
            android:textSize="48px" />

        <EditText
            android:id="@+id/model_signup_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="440px"
            android:textSize="48px"
            android:inputType="text"/>
        <TextView />
    </TableRow>

    <TableRow android:layout_marginTop="20px">
        <TextView />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="year："
            android:textSize="48px" />

        <EditText
            android:id="@+id/year_signup_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:minWidth="440px"
            android:textSize="48px" />

        <TextView />
    </TableRow>

    <TableRow android:layout_marginTop="20px">
        <TextView />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="color："
            android:textSize="48px" />

        <EditText
            android:id="@+id/color_signup_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="440px"
            android:textSize="48px"
            android:inputType="text"/>
        <TextView />
    </TableRow>


    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@android:style/ButtonBar">

        <Button android:id="@+id/btn_button2_1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Back"/>

        <Button android:id="@+id/btn_button2_2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Next"/>

    </LinearLayout>

</TableLayout>
